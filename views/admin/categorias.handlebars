<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>Nome: {{nome}}</h4>
            <small>Slug: {{slug}}</small>
            <small>Data de criação: {{date}}</small><br><br>
           <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success btn-sm">Editar</button></a>
            <form action="/admin/categorias/excluir" method="POST">
                <input type="hidden" name= "id" value={{_id}}>
                 <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-danger btn-sm mt-2">Excluir</button></a>
            </form>

        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria registrada</h4>
{{/each}}